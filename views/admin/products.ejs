<%- include("../includes/head.ejs")%>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include("../includes/navigation.ejs")%>
    <main>
        <% if(prods.length > 0){ %>
        <div class="grid admin_grid">
            <% for(let product of prods){ %>
            <article class="card product-item">
                <!-- <header class="card__header">
                    <h1 class="product__title"><%= product.title %></h1>
                </header> -->
                <div class="card__image"><img src="<%= product.imageUrl %>" alt="<%= product.title %>" /></div>
                <div class="card__content">
                    <p class="product__title"><%= product.title %></p>
                    <h3 class="product__price">$ <%= product.price %></h3>
                </div>
                <div class="card__actions">
                    <a href="/admin/edit-product/<%= product._id %>?edit=true" class="btn">Edit</a>

                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" name="productId" value="<%=product._id%>">
                    <!-- <button class="btn danger deleteBtn" type="button" value="<i class='fas fa-trash'></i>"><i
                            class="fas fa-trash"></i></button> -->
                    <button onclick="deleteProduct(this)" class="btn danger" type="button"><i
                            class="fas fa-trash"></i></button>


                </div>
            </article>
            <% }; %>
        </div>
        <% }else{ %>
        <h1>No Products</h1>
        <% } %>
    </main>
    <script src="/js/admin_client.js"></script>
    <%- include("../includes/end.ejs")%>